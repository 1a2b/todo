<li id = "list_<%=list.id %>">
	<b> <%= list.user.name %>'s  list</b>

	<%= link_to 'delete this list', list, :method => :delete, :remote => true, :class => 'delete-list' %>
	
	<div class="form-new">
		<b>New Task:</b>
		<%= render partial: 'tasks/form_new', :task => @task, :locals => {:list_id => list.id } %>
	</div>
	
	<div class="tasks">
			<% list.tasks.each do |task| %>
				<%= render partial: 'tasks/task', :locals => {:task => task } %>
			<% end %>
	</div>
</li>